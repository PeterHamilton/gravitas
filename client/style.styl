linear-gradient()
  background: -moz-linear-gradient(arguments)
  background: -webkit-linear-gradient(arguments)
  background: -o-linear-gradient(arguments)

centered-table-cell()
  display: table-cell
  width: 100%
  text-align: center
  vertical-align: middle


body
  margin: 0
  padding: 0
  font-family: Century Gothic, sans-serif
  cursor:default
  /* Turns off ALL selections.
     For some reason, just setting it on #paper doesn't work.
     Re-enabling it for everything else doesn't work either. */
  user-select: none
  -webkit-touch-callout: none
  -webkit-user-select: none


input
  color: #000
  padding: 7px
  font-size: 14px
  border: 1px solid #c0c0c0
  border-radius: 5px


label
  color: #68727b
  display: block
  padding-bottom: 2px
  font-size: 11px
  text-transform: uppercase

tr
  color: #68727b
  font-size: 12px
  text-transform: uppercase

button
  border: 1px solid #21619b
  color: #02a9ef
  border-radius: 3px
  box-shadow: 0 0 5px #000
  background: #11519b8
  linear-gradient top, #11519b 0%, #013770 100%


button:hover
  border-color: #3f7fb9
  color: #fff
  background: #4281bc
  linear-gradient top,  #4281bc 0%, #195992 100%

#small-logo
  width: 160px
  height: 37px

#login-overlay
  background-image: url(images/ui/bgnologo.jpg);
  -webkit-background-size: cover;
  -moz-background-size: cover;
  -o-background-size: cover;
  background-size: cover;
  z-index: 1000
  position: absolute
  top: 0
  bottom: 0
  left: 0
  width: 100%
  height: 100%



#login-window
  border: 3px solid #525e67
  padding-left: 10px
  width: 180px
  height: 250px
  vertical-align: middle
  position: absolute
  left: 50%
  top: 50%
  margin-left: -90px
  margin-top: -95px
  background-color:rgba(0,0,0,0.7);



#game
  // Use the full screen
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0

#lobby
  border: 3px solid #525e67
  padding-left: 10px
  width: 600px
  height: 380px
  vertical-align: middle
  position: absolute
  left: 50%
  top: 50%
  margin-left: -300px
  margin-top: -190px
  background-color:rgba(0,0,0,0.7);



#game-table
  display: table
  width: 100%
  height: 100%


#paper-container
  centered-table-cell()


#paper
  display: inline-block
  cursor: url(images/cursor/transparent.png), default


#controls
  position: absolute
  top: 0
  right: 0
  bottom: 0
  padding: 3px
  border: 5px solid red


#lag_indicator
  text-align: center
  background-color: #ccc


#lag_indicator.lag
  color: white
  background-color: red


#log_container
  margin-top: 2em

