linear-gradient()
  background: -moz-linear-gradient(arguments)
  background: -webkit-linear-gradient(arguments)
  background: -o-linear-gradient(arguments)

background-size-cover()
  -webkit-background-size: cover
  -moz-background-size: cover
  -o-background-size: cover
  background-size: cover


body
  margin: 0
  padding: 0
  font-family: Century Gothic, sans-serif
  cursor:default
  user-select: none
  -webkit-touch-callout: none
  -webkit-user-select: none


input
  color: #000
  padding: 7px
  font-size: 14px
  border: 1px solid #c0c0c0
  border-radius: 5px


label
  color: #68727b
  display: block
  padding-bottom: 2px
  font-size: 11px
  text-transform: uppercase

tr
  color: #68727b
  font-size: 12px
  text-transform: uppercase

button
  border: 1px solid #21619b
  color: #b7d1dc
  border-radius: 3px
  box-shadow: 0 0 5px #000
  background: #11519b8
  linear-gradient top, #11519b 0%, #013770 100%


button:hover
  border-color: #3f7fb9
  color: #fff
  background: #4281bc
  linear-gradient top,  #4281bc 0%, #195992 100%


.screen
  position: absolute
  top: 0
  bottom: 0
  left: 0
  right: 0


// For centering divs vertically: (from http://stackoverflow.com/a/6182661)
//   div.centered-table
//     div.centered-table-cell
//       inner div which is now centered (e.g. a .box)
.centered-table
  display: table
  position: absolute
  width: 100%
  height: 100%

.centered-table-cell
  display: table-cell
  width: 100%
  text-align: center
  vertical-align: middle


.box
  position: relative
  text-align: left
  border: 3px solid #525e67

  .centered-table-cell
    display: table-cell
    vertical-align: middle


.box
  margin-left: auto
